{
  "manifest_version": 2,
  "name": "Time Tracker",
  "version": "1.0",
  "description": "An Extension to track time spent on Social media apps",
  "permissions": [
    "tabs",
    "storage",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Time Tracker"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.twitter.com/*"
      ],
      "js": [
        "Logic.js"
      ]
    }
  ]
}