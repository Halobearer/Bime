{
  "manifest_version": 3,
  "name": ".bime.",
  "version": "1.0",
  "description": "bime. tracker",
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "declarativeNetRequest"
  ],

  "background": {
    "service_worker": "scripts/background.js"
  },

  "icons": {
    "128": "images/bimepng.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/bimepng.png"
    }
  },

  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["<all_urls>"]
    }
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "js": ["scripts/popup.js"] 
      
    }
  ]
}
